{
  "build": {
    "beforeDevCommand": "npm run dev:ui",
    "beforeBuildCommand": "npm run build:ui",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "discord-external-chat",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "startDragging": true,
        "close": true,
        "hide": true,
        "show": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setResizable": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "discord-external-chat",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "discord-external-chat",
        "width": 500,
        "height": 700,
        "transparent": true,
        "decorations": false,
        "url": "/chat"
      }
    ]
  }
}
